<Window x:Class="Особиста_Біблотека_Гнозіс.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gnosis - Особиста бібліотека" Height="600" Width="1000"
        Background="{DynamicResource BackgroundHue}" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource PrimaryHue}" Padding="10">
            <StackPanel>
                <TextBlock Text="GNOSIS" Foreground="{DynamicResource TextHue}" FontSize="24" 
                           FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Button Content="📚 Моя бібліотека" Style="{StaticResource MenuButtonStyle}" 
                        Margin="0,5" Click="LibraryButton_Click"/>

                <Button Content="📊 Аналітика" Style="{StaticResource MenuButtonStyle}" 
                        Margin="0,5" Click="AnalyticsButton_Click"/>

                <Button Content="➕ Додати книгу" Style="{StaticResource MenuButtonStyle}" 
                        Margin="0,5" Click="AddBookButton_Click"/>

                <Separator Margin="0,20" Background="{DynamicResource TextHue}" Opacity="0.3"/>

                <Button Content="⚙️ Налаштування" Style="{StaticResource MenuButtonStyle}" 
                        Click="SettingsButton_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <ContentControl x:Name="PagesControl" Margin="20">
                <StackPanel>

                    <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" x:Name="BooksGrid"
                              Background="White" BorderBrush="#DDDDDD" GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Title}" Width="2*"/>
                            <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="*"/>
                            <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="*"/>
                            <DataGridTemplateColumn Header="Прогрес" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ProgressBar Value="{Binding ProgressPercentage}" Minimum="0" Maximum="100" Height="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ContentControl>
        </Grid>
    </Grid>
</Window>