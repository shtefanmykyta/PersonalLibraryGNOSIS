<UserControl x:Class="Особиста_Біблотека_Гнозіс.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Налаштування інтерфейсу" FontSize="26" FontWeight="Bold" 
                       Foreground="Black" Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="10" Padding="20" Opacity="0.9">
                <StackPanel>
                    <TextBlock Text="Колір теми:" FontSize="16" Margin="0,0,0,15" Foreground="Black"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Ніч" Width="100" Height="40" Margin="0,0,20,0"
                                Background="#2C3E50" Foreground="White" Click="SetDarkTheme_Click"/>

                        <Button Content="М'ята" Width="100" Height="40" Margin="0,0,20,0"
                                Background="#2ECC71" Foreground="White" Click="SetMintTheme_Click"/>

                        <Button Content="Гумка" Width="100" Height="40" Margin="0,0,20,0"
                                Background="#FF85A1" Foreground="White" Click="SetPinkTheme_Click"/>

                        <Button Content="Персик" Width="100" Height="40"
                                Background="#FFAD77" Foreground="White" Click="SetPeachTheme_Click"/>
                    </StackPanel>

                    <Separator Margin="0,25" Background="#DDD"/>

                    <TextBlock Text="Масштаб тексту:" FontSize="16" Margin="0,0,0,10" Foreground="Black"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Slider x:Name="FontSizeSlider" 
                        Minimum="12" Maximum="21" 
                         TickFrequency="1" 
                          IsSnapToTickEnabled="True"
                            Margin="0,0,15,0" />

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ElementName=FontSizeSlider, Path=Value}" 
                                   FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Width="30"/>
                    </Grid>
                    <TextBlock Text="* Масштаб застосовується до всіх розділів бібліотеки" 
                               FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>